<% if signed_in? %>
<div class="page-header">
	<h1>Active Tickets<h1>
</div>
<h4>Think you can help one of our Users?<br />
Click on their profile avatar below and request their Friendship.</h4>
<%= link_to "Log a Support Ticket", new_status_path, class: "btn btn-success " %>

<% @statuses.each do |status| %>
	<div class="status">
		<div class="row">
			<div class="span1">
				<%= link_to (image_tag status.user.gravatar_url), profile_path(status.user) %>
			</div>
			<div class="span7">
				<strong><%= status.user.full_name %></strong>
				<p><%= status.content %></p>
				<div class="meta">
				<%= link_to time_ago_in_words(status.created_at) + " ago", status %>
				<span class="admin">
				| <%= link_to "Edit", edit_status_path(status) %> |
				<%= link_to "Delete", status, method: :delete, data: { confirm: "Are you sure you want to delete this status?"} %>
			</span>
		</div>
	</div>
</div>
</div>
<% end %>
<% else %>
<h2>Clonyn is a community based IT Support and eLearning network. Sign up as a Freelancer to provide support, or as a User to receive support.</h2><h3><%= link_to 'Register Now!', register_path %></h3><br />

<% end %>